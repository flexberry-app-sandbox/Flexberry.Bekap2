<h3 class="ui header">{{t "forms.i-i-s-bekap-2-услуга-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.у
      class=(if (v-get validationModel "у" "isInvalid") "error")
      label=(t "forms.i-i-s-bekap-2-услуга-e.у-caption")
      data-test-i-i-s-bekap-2-услуга-e-у=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "у" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.услуга
      class=(if (v-get validationModel "услуга" "isInvalid") "error")
      label=(t "forms.i-i-s-bekap-2-услуга-e.услуга-caption")
      data-test-i-i-s-bekap-2-услуга-e-услуга=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "услуга" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-bekap-2-услуга-e.длительность-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.длительность
      class=(if (v-get validationModel "длительность" "isInvalid") "error")
      data-test-i-i-s-bekap-2-услуга-e-длительность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "длительность" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.цена
      class=(if (v-get validationModel "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-bekap-2-услуга-e.цена-caption")
      data-test-i-i-s-bekap-2-услуга-e-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "цена" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-bekap-2-услуга-e.составУслуги-caption"}}</label>
    {{flexberry-groupedit
      componentName="составУслугиGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.составУслуги
      content=model.составУслуги
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "составУслуги" "isInvalid") "error")
      data-test-i-i-s-bekap-2-услуга-e-составУслуги=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "составУслуги" "message")}}
  </div>
</form>
